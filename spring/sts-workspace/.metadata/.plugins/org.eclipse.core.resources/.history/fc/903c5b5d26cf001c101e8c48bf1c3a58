spring:
  application:
    name: api-gateway
logging:
  file:
    name: logs/api-gateway.log
---
spring:
  profiles:
    active: development
  main:
    allow-bean-definition-overriding: true
  security:
    oauth2:
      client:
        provider:
          spring:
            issuer-uri: http://auth-service:9001
        registration:
          gateway-client:
            provider: spring
            client-id: gateway-client
            client-secret: gatewaysecret
            scope:
            - openid
#            - message.read
#            - message.write
  cloud:
    gateway:
      discovery:
        locator:
          enabled: false
          lower-case-service-id: true
      routes:
      - id: auth-service-api
        predicates:
        - Path=/api/auth/**
#        filters:
#        - 'TokenRelay='
        uri: http://auth-service:9001
      - id: ui-service
        uri: http://ui-service:4200/portal
        predicates:
        - Path=/portal/**
#        filters:
#        - RewritePath=/portal(?<segment>/?.*),/$\{segment}
      - id: public-api
        uri: http://resource-service:8090/api/public
        predicates:
        - Path=/api/public/**
      - id: secure-api
        uri: http://resource-service:8090/api/secure
        predicates:
        - Path=/api/secure/**
        filters:
        - 'TokenRelay='
server:
  port: 4000
logging:
  level:
    '[com.gusrubin.springgateway]': debug
